{{#section 'medications'}}
<script type="text/javascript">
$(document).on('click','.medLi',function(){
  //alert(JSON.stringify($(this).children().css('visibility')));
  var $buttons = $(this).children();
  if($buttons.css('visibility') == 'visible'){
    $(this).parent().toggleClass('down');
    $buttons.hide().css('visibility','hidden').fadeIn("slow");
  }else {
    $(this).parent().toggleClass('down');
      $buttons.hide().css('visibility','visible').fadeIn("slow");
    }
});
</script>
